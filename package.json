{
    "private": true,
    "scripts": {
        "dev": "yarn route && mix watch --hot",
        "dev-ssr": "mix --mix-config=webpack.ssr.mix.js",
        "serve": "node public/js/ssr.js",
        "frontend:prod": "mix --production && mix --production --mix-config=webpack.ssr.mix.js",
        "backend": "mix watch --mix-config=webpack.backend.mix.js",
        "backend:prod": "mix --production --mix-config=webpack.backend.mix.js",
        "prod": "npm run frontend:prod && npm run backend:prod",
        "reset": "yarn && composer install && php artisan migrate:fresh --seed && yarn route",
        "route": "php artisan ziggy:generate && php artisan ziggy:generate resources/Frontend/js/ziggy.js",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix resources",
        "format": "prettier --write 'resources/**/*.{js,json,vue,scss}'",
        "compress": "npx @squoosh/cli --webp auto resources/Frontend/images -d resources/Frontend/images",
        "crawl": "node packages/jamstackvietnam/support/crawler/app.js",
        "frontend:node": "node public/js/ssr.js"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.2",
        "axios": "^0.21",
        "cross-env": "^7.0.3",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-vue": "^8.5.0",
        "laravel-mix": "^6.0.6",
        "laravel-mix-merge-manifest": "^2.0.0",
        "laravel-mix-svg-vue": "^0.4.1",
        "lodash": "^4.17.19",
        "postcss": "^8.4.6",
        "prettier": "^2.6.0",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.49.9",
        "sass-loader": "^12.6.0",
        "tailwindcss": "^3.0.19",
        "vue-loader": "^16.8.3",
        "vue3-observe-visibility": "^0.1.2"
    },
    "dependencies": {
        "@inertiajs/inertia": "^0.10.1",
        "@inertiajs/inertia-vue3": "^0.5.2",
        "@inertiajs/progress": "^0.2.6",
        "@inertiajs/server": "^0.1.0",
        "@tailwindcss/aspect-ratio": "^0.4.0",
        "@tailwindcss/line-clamp": "^0.3.1",
        "@tailwindcss/typography": "^0.5.2",
        "@tinymce/tinymce-vue": "^4.0.7-rc.20220227221622816.shae4a6878",
        "@vue/server-renderer": "^3.2.31",
        "node-xlsx": "^0.21.0",
        "puppeteer": "^13.6.0",
        "puppeteer-extra": "^3.2.3",
        "puppeteer-extra-plugin-stealth": "^2.9.0",
        "svg-vue3": "^0.2.1",
        "swiper": "^8.0.7",
        "tiny-emitter": "^2.1.0",
        "vue": "^3.2.29",
        "vue-awesome-swiper": "^5.0.1",
        "vue-multiselect": "^3.0.0-alpha.2",
        "vue-observe-visibility": "^1.0.0",
        "vue3-google-map": "^0.10.0",
        "vuedraggable": "^4.1.0",
        "webpack-node-externals": "^3.0.0",
        "ziggy-js": "^1.4.4"
    },
    "engines": {
        "node": "16.x"
    }
}
